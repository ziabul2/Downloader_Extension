{
  "manifest_version": 3,
  "name": "ZIM Downloader Integration",
  "version": "1.0",
  "description": "Send links to ZIM Universal Media Downloader",
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ZIM Downloader",
    "default_icon": {
      "16": "logo.ico",
      "48": "logo.ico",
      "128": "logo.ico"
    }
  },
  "icons": {
    "16": "logo.ico",
    "48": "logo.ico",
    "128": "logo.ico"
  }
}